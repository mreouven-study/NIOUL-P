
@{
    ViewBag.Title = "Login";
}
<script src="~/js/jquery.validate.js"></script>
<script src="~/js/jquery.validate.unobtrusive.js"></script>
<script src="~/js/jquery-3.3.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.79/jquery.form-validator.js"></script>
<script src="~/js/bootstrap.js"></script>
<script src="~/js/bootstrap.min.js"></script>

<div class="container">
    <div class="viewbag" style="color:orangered">@ViewBag.Error</div>
    <style>
        .viewbag {
            font-size: 30px;
        }
    </style>
    <form class="form-horizontal" onsubmit="event.preventDefault(); validate()" action="ValidateRegister" role="form" method="post" id="formLogin">
        <h2>Login</h2>


        <div class="form-group">
            <label for="firstName" class="col-sm-3 control-label">Email</label>
            <div class="col-sm-9">
                <input style="width:70%" Class="form-control" class="input-validation-error" data-val="true" data-val-email="Invalid Email Address" data-val-required="Le champ Email est requis." id="Email" name="Email" type="email" value="" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastName" class="col-sm-3 control-label">Password</label>
            <div class="col-sm-9">
                <input style="width:70%" Class="form-control" class="input-validation-error" data-val="true" data-val-required="Le champ Password est requis." id="Password" name="Password" type="text" value="" />


            </div>
        </div>

        <button type="submit" class="btn btn-primary pull-right">Login</button>

    </form>
</div>
